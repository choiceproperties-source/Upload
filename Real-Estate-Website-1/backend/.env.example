# Backend Server Configuration
NODE_ENV=development
PORT=3000
BACKEND_URL=http://localhost:3000

# Database
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/choice-properties

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long

# Email Configuration (Brevo SMTP)
SMTP_USER=your-brevo-email@example.com
SMTP_PASS=your-brevo-api-key
EMAIL_FROM=noreply@choiceproperties.com

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:5000
FRONTEND_PROD_URL=https://your-domain.com

# Logging
LOG_LEVEL=debug

# Payment Configuration
PAYMENT_SUCCESS_RATE=0.9
MAX_PAYMENT_AMOUNT=100000
MIN_PAYMENT_AMOUNT=0.01

# Application Configuration
MAX_APPLICATIONS_PER_HOUR=3
MAX_PAYMENT_ATTEMPTS_PER_10MIN=3
MAX_NEWSLETTER_SUBS_PER_HOUR=2

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key
